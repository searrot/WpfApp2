<Window x:Class="WpfApp2.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="SignInWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock Margin="350 10 10 10" FontSize="25" Grid.Row="0">VHOD</TextBlock>
        <TextBlock Margin="10 10 10 10" FontSize="25" Grid.Row="1">ВВЕДИТЕ ЛОГИН</TextBlock>
        <TextBox x:Name="loginBox" Grid.Row="2"/>
        <TextBlock Margin="10 10 10 10" FontSize="25" Grid.Row="3">ВВЕДИТЕ ПАРОЛЬ</TextBlock>
        <PasswordBox x:Name="passBox_1"  Grid.Row="4"/>
        <Button Content="Войти" Grid.Row="7" FontSize="25" Click="Button_Auth_Click"/>
        <Button Content="Перейти на страницу регистрации" Grid.Row="8" FontSize="25" Click="Button_Window_Reg_Click"/>
    </Grid>
</Window>
